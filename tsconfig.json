{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "outDir": "transpiled/",
        "strict": true,
        "sourceMap": true,
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "target": "es6",
        "typeRoots": ["node_modules/@types"],
        "types": ["node"],
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "typescript"],
    "lib": ["es2018", "dom"]
}
